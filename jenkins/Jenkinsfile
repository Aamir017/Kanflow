pipeline {
  agent any

  environment {
    DOCKER_IMAGE = 'aamir017/kanflow-backend'
    DOCKER_TAG = 'latest'
    ANSIBLE_HOST_KEY_CHECKING = 'False'
    TRIVY_PATH = "${env.HOME}/.local/bin"
  }

  stages {

    stage('Checkout Code') {
      steps {
        git branch: 'main', url: 'https://github.com/Aamir017/Kanflow.git'
      }
    }

    stage('Security Scan (Trivy)') {
      steps {
        sh '''
          mkdir -p ~/.local/bin
          export PATH="$HOME/.local/bin:$PATH"

          if ! command -v trivy > /dev/null; then
            echo "üì¶ Installing Trivy..."
            curl -sfL https://raw.githubusercontent.com/aquasecurity/trivy/main/contrib/install.sh | sh -s -- -b ~/.local/bin
          fi

          ~/.local/bin/trivy image --exit-code 0 --severity CRITICAL $DOCKER_IMAGE:$DOCKER_TAG || echo "‚ö†Ô∏è Vulnerabilities found"
        '''
      }
    }

    stage('Deploy (Ansible)') {
      steps {
        dir('ansible') {
          sh 'ansible-playbook -i inventory.ini playbook.yml'
        }
      }
    }

    stage('Notify') {
      steps {
        echo '‚úÖ Pipeline completed!'
      }
    }

  }

  post {
    success {
      echo 'üéâ Success: App deployed!'
    }
    failure {
      echo '‚ùå Error: Pipeline failed'
    }
  }
}

